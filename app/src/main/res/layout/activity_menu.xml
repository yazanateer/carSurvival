<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/select_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="Select Game Mode"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/button_slow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button Slow Mode"
        android:textSize="20dp"
        android:layout_below="@id/select_mode"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <Button
        android:id="@+id/button_fast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button Fast Mode"
        android:textSize="20dp"
        android:layout_below="@id/select_mode"
        android:layout_marginTop="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <Button
        android:id="@+id/sensor_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor Mode"
        android:textSize="20dp"
        android:layout_below="@id/select_mode"
        android:layout_marginTop="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />



</RelativeLayout>